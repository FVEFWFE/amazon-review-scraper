# Amazon Review Scraper Service Configuration

# Service Configuration
SERVICE_NAME=amazon-review-scraper
SERVICE_VERSION=0.2.0
DEBUG=false
LOG_LEVEL=INFO

# API Configuration
API_HOST=0.0.0.0
API_PORT=8080
API_PREFIX=
CORS_ORIGINS=http://localhost:3000,http://localhost:8000

# Database Configuration
REVIEWS_DB_URL=sqlite:///./data/reviews.db

# Redis Configuration
REDIS_URL=redis://localhost:6379/0
CACHE_TTL_SECONDS=900

# Oxylabs API Configuration (Required for production)
OXYSCRAPER_BASE_URL=https://realtime.oxylabs.io/v1/queries
OXYSCRAPER_AUTH_USER=
OXYSCRAPER_AUTH_PASS=

# Rate Limiting Configuration
RATE_LIMIT_RPS=1.0
MAX_PAGES_FREE=2
MAX_PAGES_OXYLABS=10
MAX_RETRIES=3
RETRY_BACKOFF_SECONDS=5

# Queue Configuration
CELERY_BROKER_URL=redis://localhost:6379/1
CELERY_RESULT_BACKEND=redis://localhost:6379/2
TASK_TIME_LIMIT=300
TASK_SOFT_TIME_LIMIT=270

# Monitoring
ENABLE_METRICS=true
METRICS_PORT=9090